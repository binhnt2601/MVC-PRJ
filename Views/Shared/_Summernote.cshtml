@model App.Models.Summernote

@if (Model.IsLoaded)
{
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <link rel="stylesheet" href="~/lib/summernote/summernote-bs4.min.css" />
}

<script>
    $(document).ready(function () {
        $('#@Model.Id').summernote({
            height: @Model.height,
            toolbar: @Html.Raw(Model.toolbar)
        });
    });
</script>

