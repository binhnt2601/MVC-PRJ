@model App.Models.Planet


@if (@Model != null)
{
    <div class="card w-50">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div style="text-align: center;">
        <img style="align-items: center;" width="50%" src="~/images/planet/@(Model.Name).jpg" alt="@Model.Name">
    
    </div> 
    <div class="card-body">
        <div class="card-text">
            @Model.Info
        </div>      
    </div>
</div>
}
else
{
    <h1>@TempData["StatusMessage"]</h1>
    
}
